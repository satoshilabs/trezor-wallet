{
    "presets": [
        ["env", {
            "useBuiltIns": true,
            "loose": true
        }],
        "react"
    ],
    "plugins": [
        "react-hot-loader/babel",
        "transform-class-properties",
        "transform-object-rest-spread",
        "transform-flow-strip-types",
        ["transform-runtime", {
            "polyfill": false,
            "regenerator": true
        }],
        ["module-resolver", {
            "root": ["./src"],
            "alias": {
                "public": ["./public"]
            }
        }],
        "babel-plugin-styled-components"
    ],
    "env": {
        "test": {
            "presets": ["jest"]
        }
    }
}